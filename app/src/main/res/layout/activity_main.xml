<?xml version="1.0" encoding="utf-8"?>
<!--This section of the code gives a general format to the objects in the application-->
<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:id = "@+id/rlVar1"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    tools:context = ".MainActivity">
    <!--This displays the instructions for the player.-->
    <TextView
        android:id = "@+id/tvVar1"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_centerInParent = "true"
        android:padding = "20dp"
        android:text = "Click on Start, wait for the background to change, then click stop."
        android:textSize = "25dp" />
    <!--This keeps the layout of the app horizontal/-->
    <LinearLayout
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_below = "@id/tvVar1"
        android:layout_centerHorizontal = "true"
        android:orientation = "horizontal"
        android:padding = "20dp">
        <!--This section adds the start and stop button objects for the game-->
        <Button
            android:id = "@+id/btVar1"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_margin = "10dp"
            android:text = "Start" />

        <Button
            android:id = "@+id/btVar2"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_margin = "10dp"
            android:text = "Stop" />
    </LinearLayout>
</RelativeLayout>

